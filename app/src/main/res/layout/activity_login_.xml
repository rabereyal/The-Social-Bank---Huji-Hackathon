<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:clickable="false"
    tools:context=".Login_Activity">

    <ImageView
        android:id="@+id/group"
        android:layout_width="65.76dp"
        android:layout_height="65.76dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:src="@drawable/group" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8.9dp"
        android:fontFamily="@font/heebo_bold"
        android:text="כניסה למשתמש קיים"
        android:textSize="26.3sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="39.5dp"
        android:layout_below="@id/title"
        android:layout_marginLeft="32.8dp"
        android:layout_marginRight="32.8dp"
        android:layout_marginTop="52.6dp"
        android:fontFamily="@font/heebo_regular"
        android:hint="Email address"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        android:textSize="16.45sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="39.5dp"
        android:layout_below="@id/email"
        android:layout_marginLeft="32.8dp"
        android:layout_marginRight="32.8dp"
        android:layout_marginTop="52.6dp"
        android:fontFamily="@font/heebo_regular"
        android:hint="password"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:textSize="16.45sp" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="345.2dp"
        android:layout_height="48.3dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32.9dp"
        android:layout_marginRight="32.9dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rounded_button"

        android:text=" כניסה "
        android:textColor="#ffff"
        android:textSize="14.13sp" />
